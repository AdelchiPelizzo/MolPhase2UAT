<apex:page id="EmailtoMedic" standardController="Consultation__c" docType="html-5.0" renderAs="pdf" showHeader="false" standardStylesheets="false" applyBodyTag="false" applyHtmlTag="false">
    <head>
        <style>
            /* Landscape orientation */
            /*@page {
