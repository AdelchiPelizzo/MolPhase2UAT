            /* Put page numbers in the top right corner of each page in the pdf document. */
            @page {
                size: letter;
                margin: 13mm;
                @top-center {
                    content: "Iqarus.com - Medical report - ";
                }
                @bottom-left{
                    content: "Printed copies are UNCONTROLLED, it is the user’s responsibility to verify printed material against the controlled document";
                }
                @bottom-right{
                    content: "Medical Topside Support Contact Report - Page " counter(page) " of " counter(pages);
                }
            }
            .page-break {
                display:block;
                page-break-after:always;
            }
            .header{
                width:100%;
                background-color: lightblue;
            }
            th{
                text-align: left;
            }
            .tdHeader{
                font-family: sans-serif;
                float: left;
                width:50%;
                margin: 10px 0px 0px 0px ;
                font-size: 30px;
            }
            .tdHeader2{
                font-family: sans-serif;
                float: left;
                width:50%;
                font-size: 25px;
            }
            .tdBox{
                background-color: white;
                font-family: sans-serif;
                width: 25%;
                vertical-align: top;
            }
            .tdBoxHeader{
                color: white;
                font-family: sans-serif;
                width: 25%;
                font-weight: bold;
                vertical-align: top;
                padding: 5px;
            }
            .tdImg{
                float:right;
                margin: 0px 55px 0px 0px;
            }
            .sectionTitle{
                font-family: sans-serif;
                font-size: 20px;
                font-style: italic;
                text-decoration: none;
                list-style-type: none;
                padding-top: 25px;
            }
            table{
                padding: 5px;
                margin: 0em 1em 0em 1em;
            }
            .box{
                border-style: solid;
                border-width: 1.5px;
                border-color: orangered;
                border-radius: 10px;
                width: 97%;
            }
            tr{
                background-color: orange;
            }
            .isfalse{
                visibility: hidden;
            }
            .isTrue{
                visibility: visible;
            }
        </style>
